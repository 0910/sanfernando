.row-fluid.subtitle
	%h1 noticias
	.cierre-oscuro
.span8(style="margin-left:0px;")
	.news-inside
		.item
			.ph
				.phslider
					- @news.images.each do |image|
						= image_tag(image.file.url(:large))
				= link_to('', "#", :class => "prevslider")
				= link_to('', "#", :class => "nextslider")
			.data
				%h5 
					#{I18n.l(@news.date, :format => '%d %B %Y')}
				%h2 #{@news.title}
				%h3 #{@news.subtitle}
				- @info.each do |info|
					%p #{info}
				- unless @news.videos.empty?
					%iframe.newsvideoframe(type="text/html" width="285" height="214" src="#{@news.videos}" frameborder="0" allowfullscreen)
				.share
					%p Compartir
					%ul
						.fbbox(style="margin:3px 10px 0px 0px; float:left;")
							.fb-like(style="top:-3px;" data-href="http://sanfernando.gob.ar/news/#{@news.id}" data-send="false" data-layout="button_count" data-width="450" data-show-faces="false" data-font="arial")
						= link_to('Tweet', "https://twitter.com/share", :class => "twitter-share-button", 'data-url' => "#")
						%script !function(d,s,id){var js,fjs=d.getElementsByTagName(s)[0];if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src="//platform.twitter.com/widgets.js";fjs.parentNode.insertBefore(js,fjs);}}(document,"script","twitter-wjs");