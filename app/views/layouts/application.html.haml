!!!
%html
	%head
		%title Sanfernando
		= favicon_link_tag image_path("favicon.ico")
		= stylesheet_link_tag    "application", :media => "all"
		= javascript_include_tag "application"
		= csrf_meta_tags
	%body{:id => "#{controller_name}", :class => "#{controller_name} #{controller_name}_#{action_name}"}
		#main
			= render '/layouts/navigation'
			#content
				#content-inside
					= yield
					- if controller_name != "home"
						.right
							= render '/layouts/mas_sanfer'
			= render '/layouts/media'
			= render '/layouts/footer'